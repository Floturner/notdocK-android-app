        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ClientsActivity"
            android:label="@string/list_clients" />
        <activity
            android:name=".activities.PartenairesActivity"
            android:label="@string/list_partenaires" />
        <activity
            android:name=".activities.DossierActivity" />
        <activity
            android:name=".activities.DetailsDossierActivity"
            android:label="@string/details_dossier" />
        <activity
            android:name=".activities.CompteActivity"
            android:label="@string/accounttype" />
