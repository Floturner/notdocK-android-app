            android:name=".activities.DossierInfoActivity"
            android:label="@string/infos_dossier" />
        <activity
            android:name=".activities.ClientsDossierActivity"
            android:label="@string/clients" />
        <activity
            android:name=".activities.PartenairesDossierActivity"
            android:label="@string/partenaires" />
        <activity
            android:name=".activities.CommentsDossierActivity"
            android:label="@string/commentaires" />
        <activity
            android:name=".activities.PiecesJointesDosssierActivity"
            android:label="@string/pieces_jointes" />
        <activity
            android:name=".activities.CourriersDossierActivity"
            android:label="@string/courriers" />
        <activity
            android:name=".activities.AgendasDossierActivity"
            android:label="@string/agendas" />
        <activity
            android:name=".activities.EtapesDossierActivity"
            android:label="@string/etapes_dossier" />
        <activity
            android:name=".activities.RegFinDossierActivity"
            android:label="@string/reglements_financiers" />
    </application>

</manifest>